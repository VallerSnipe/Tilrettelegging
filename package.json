{
  "name": "tilrettelegging-app",
  "version": "1.0.1",
  "description": "En app for å håndtere tilrettelegginger for elever.",
  "main": "main.js",
  "scripts": {
    "start": "node node_modules/electron/cli.js .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "dev:react": "npm run dev --prefix frontend",
    "dev:electron": "npm start",
    "dev": "concurrently \"npm:dev:react\" \"npm:dev:electron\""
  },
  "dependencies": {
    "axios": "^1.7.2",
    "better-sqlite3": "^11.1.2",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.valler.tilrettelegging",
    "productName": "Tilrettelegging Valler VGS",
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "db.js",
      "database-handler.js",
      "tilrettelegging.db",
      "frontend/dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ]
  }
}